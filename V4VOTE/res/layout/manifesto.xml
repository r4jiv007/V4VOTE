<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_edge_pm_border"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_edge_pm"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Manifesto"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/manifesto_party_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:src="@drawable/bjp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/manifesto_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp" >

        <TextView
            android:id="@+id/manifesto_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Test"
            android:textColor="#000000"
            android:textSize="16dp" />
    </ScrollView>

</LinearLayout>